<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">


    <TextView
        android:id="@+id/txt_list_nama_orang_from_history"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Nama Barang"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_list_stock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_list_nama_orang_from_history"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_delivery"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/txt_list_order_status"
        android:layout_toEndOf="@+id/img_list_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_nama_orang_from_history"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Sudah Diantar"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_list_money"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_list_order_status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_money_history"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/img_list_amount_money"
        android:layout_toEndOf="@+id/img_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_order_status"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Lunas"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

    <Button
        android:id="@+id/btn_list_detail_from_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_nama_orang_from_history"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/txt_list_order_status"
        android:text="Detail"
        tools:ignore="HardcodedText" />


</RelativeLayout>
