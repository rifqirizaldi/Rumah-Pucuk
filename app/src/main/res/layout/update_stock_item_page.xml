<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.UpdateStockItemPage"
    android:orientation="vertical"
    android:background="@drawable/linear_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UseCompoundDrawables,UselessParent">
        <ImageView
            android:id="@+id/img_back_from_update_stock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_back"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Stock"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal Barang"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <EditText
                android:id="@+id/ed_stock_origin_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white"
                android:hint="Isi Disini"
                android:textColorHint="#757575"
                android:maxLines="1"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <EditText
                android:id="@+id/ed_origin_address_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white"
                android:hint="Isi Disini"
                android:textColorHint="#757575"
                android:maxLines="1"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Telp / WA Supplier"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <EditText
                android:id="@+id/ed_origin_contact_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white"
                android:hint="Isi Disini"
                android:textColorHint="#757575"
                android:maxLines="1"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <Spinner
                android:id="@+id/spinner_item_name_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/round_white"/>

            <Button
                android:id="@+id/btn_refresh_from_update_stock"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Refresh"
                tools:ignore="HardcodedText"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Satuan Harga Barang"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <EditText
                android:id="@+id/ed_stock_price_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white"
                android:inputType="number"
                android:hint="Isi Disini"
                android:textColorHint="#757575"
                android:maxLines="1"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Penambahan Stock"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <EditText
                android:id="@+id/ed_stock_amount_from_update_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white"
                android:inputType="number"
                android:hint="Isi Disini"
                android:textColorHint="#757575"
                android:maxLines="1"
                tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

            <Button
                android:id="@+id/btn_kirim_from_update_stock"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:text="Kirim Data"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>