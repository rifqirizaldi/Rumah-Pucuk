<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp">


    <TextView
        android:id="@+id/txt_list_nama_item_from_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Nama Pesanan"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_list_delivery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_list_nama_item_from_history"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_delivery"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/txt_list_delivery_status_from_history"
        android:layout_toEndOf="@+id/img_list_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_nama_item_from_history"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Sudah Diantar"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_list_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_list_delivery"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_money_history"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_list_payment_amount_from_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_delivery_status_from_history"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/img_list_phone"
        android:gravity="center"
        android:text="130000"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

    <ImageButton
        android:id="@+id/btn_list_detail_from_history"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_list_nama_item_from_history"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/icon_info"
        tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/img_status_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_list_phone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/icon_status_info"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_list_payment_status_from_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img_status_info"
        android:layout_below="@id/txt_list_payment_amount_from_history"
        android:text="Lunas"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/img_status_info"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_status_transaksi"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_list_transaction_status_from_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_payment_status_from_history"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Penjualan"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
